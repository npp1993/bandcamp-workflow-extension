{
  "name": "Bandcamp Workflow Extension",
  "short_name": "bandcamp-workflow-Extension",
  "description": "Enhance Bandcamp browsing workflow",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
  },
  "action": {
    "default_title": "Bandcamp Workflow Extension",
    "default_icon": {
    }
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.bandcamp.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.bandcamp.com/*"
      ],
      "js": [
        "scripts/content.js"
      ],
      "css": [
        "assets/content.css"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ]
}
