{
  "name": "Bandcamp Workflow Extension",
  "short_name": "Bandcamp Workflow",
  "description": "Enhanced Bandcamp experience with keyboard shortcuts, waveform visualization, wishlist management, and cart functionality",
  "version": "1.0",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_title": "Bandcamp Workflow Extension",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png", 
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "*://*.bandcamp.com/*",
    "https://t4.bcbits.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.bandcamp.com/*"
      ],
      "js": [
        "scripts/content.js"
      ],
      "css": [
        "assets/content.css"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ]
}
